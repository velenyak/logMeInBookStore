{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "ng",
    "tasks": [
        {
            "taskName": "Run App",
            "suppressTaskName": true,
            "args": [
                "serve"
            ],
            "type": "shell",
            "problemMatcher": []
        },
        {
            "taskName": "Build App",
            "suppressTaskName": true,
            "args": [
                "build"
            ],
            "type": "shell"
        },
        {
            "taskName": "Build Prod",
            "suppressTaskName": true,
            "args": [
                "build",
                "--prod"
            ],
            "type": "shell"
        }
    ]
}